
<div>
    <p><%= comment.body %>...<%= comment.user.user_name %> commented <%= time_ago_in_words(comment.created_at) %> ago</p>
    <p>  <%= link_to "Edit Comment", edit_post_comment_path(comment.post, comment), class: 'btn btn-success' %>
         <%= link_to "Delete Comment", [comment.post, comment], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this comment?' } %>
        <% if current_user %>
          <%= render partial: 'likes/likecomment', locals: { comment: comment } %>
        <% end %>
    </p>
</div>
