
<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= comment.body %>
      <small>
        <%= comment.user.email %> commented <%= time_ago_in_words(comment.created_at) %> ago
          | <%= link_to "Delete", [@post, comment], method: :delete %>
      </small>
      <% if current_user %>
        <%= render partial: 'likes/likecomment', locals: { comment: comment } %>
      <% end %>
    </div>
  </div>
</div>
