<div class="row">
  <div class="col-md-8">
    <h1>Label: <%= @label.name %></h1>
    <% @label.posts.each do |post| %>
      <div>
        Post: <%= link_to post.title, post %>
      </div>
    <% end %>
    <% @label.comments.each do |comment| %>
      <div>
        Comment: <%= link_to comment.body, post_comment_path(comment.post, comment) %>
      </div>
    <% end %>
  </div>
</div>
