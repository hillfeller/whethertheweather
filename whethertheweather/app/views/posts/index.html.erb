<h4 id="notice"><%= notice %></h4>
<div class="datagrid">
    <h1>Weather Notifications</h1>

    <%= link_to 'Post a new weather update!', new_post_path, class: 'btn btn-success post-update-button'  %>

      <table class="table table-box">
        <thead>
          <tr>
            <th>Weather Updates?</th>
            <th>Feel it in your bones?</th>
            <th>Who and When?</th>
            <th>Location</th>
            <th>Ailment</th>
            <th>Labels</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= time_ago_in_words(post.created_at)%> ago by <%= link_to post.user.user_name, post.user %></td>
              <td><%= post.user.location %></td>
              <td><%#= post.user.ailments.map(&:type).to_sentence %></td>
              <td><%= post.label %></td>
              <td><%= link_to 'Show', post %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>

    <br>
    <%= link_to image_tag('feed-icon-28x28.png', class: "feed-icon" ), posts_path(:atom)%>
