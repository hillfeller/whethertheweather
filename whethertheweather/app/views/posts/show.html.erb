<div class = "datagrid">
<p id="notice"><%= notice %></p>

<p>
  <strong>Weather update:</strong>
  <%= @post.title %>
</p>

<p class="lead">
  <%= @post.label.name if @post.label %>
  <br />
</p>

<p>
  <strong>Description:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.user_name %> posted <%= time_ago_in_words(@post.created_at) %> ago

</p>

<p>
  <strong>Location:</strong>
  <%= @post.user.location %>
</p>


<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-success' %> |
<%= link_to "Delete Post", [@post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
<%= link_to 'Back', posts_path %>
<% if current_user %>
  <%= render partial: 'likes/likepost', locals: { post: @post } %>
<% end %>
</div>
<p>
    <div>
    <h3>Comments</h3>
    <div class='js-comments'>
      <%= render @post.comments %>
    </div>
   <% if current_user %>
     <div class='new-comment'>
       <%= render 'comments/form', comment: Comment.new, post: @post %>
     </div>
   <% end %>
  </div>
</p>
